{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/rayskillkit/skills.schema.json",
  "title": "RaySkillKit Skills Catalogue",
  "type": "object",
  "required": ["skills", "metadata"],
  "additionalProperties": false,
  "properties": {
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "version",
          "model_path",
          "stats_path",
          "capabilities"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^(skill_\\d{3}|travel_[a-z0-9_]+)$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "model_path": {
            "type": "string",
            "pattern": "^(skills/)?models/.+"
          },
          "stats_path": {
            "type": "string",
            "pattern": "^(skills/)?stats/.+"
          },
          "capabilities": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "dataset": {
            "type": "string",
            "minLength": 1
          },
          "metrics": {
            "type": "object",
            "required": ["final_loss", "residual_std"],
            "additionalProperties": true,
            "properties": {
              "final_loss": {"type": "number"},
              "residual_std": {"type": "number"}
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["version", "generated_at", "notes"],
      "additionalProperties": false,
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
